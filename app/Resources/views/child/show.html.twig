{% extends 'base.html.twig' %}

{% block body %}
    <h1>Child</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ child.name }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{% if child.dateOfBirth %}{{ child.dateOfBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('child_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('child_edit', { 'id': child.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{#{% extends '::base.html.twig' %}#}
{% embed 'AppBundle::base.html.twig' %}

    {% block content_div_start %}<div class="content">{% endblock content_div_start %}
    {% block page_header %}
        <div class="page-header">
            <h1>{% block headline %}{{ entity.name }}'s Profile Page{% endblock headline %}</h1>
        </div>
    {% endblock page_header %}
    {% block content_row %}
        <div class="row">
            {% block content %}
                <div class="col-sm-9">
                    {% block content_content %}
                        <table class="record_properties">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th>Dateofbirth</th>
                                <td>{{ entity.dateOfBirth|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <ul class="record_actions">
                            <li>
                                <a href="{{ path('child') }}">
                                    Back to the list
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('child_edit', { 'parentUsername':app.user.username, 'id': entity.id }) }}">
                                    Edit
                                </a>
                            </li>
                            <li>{{ form(delete_form) }}</li>
                        </ul>
                    {% endblock content_content %}
                </div>
